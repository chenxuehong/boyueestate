<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40">

    <TextView
        android:id="@+id/tvNecessaryTitleInputviewTitle"
        android:layout_marginLeft="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_333333"
        android:text="建筑面积"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etNecessaryTitleInputviewContent"
        android:layout_marginLeft="@dimen/dp_18"
        app:layout_constraintLeft_toRightOf="@id/tvNecessaryTitleInputviewTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_15"
        android:hint="请输入建筑面积"
        android:gravity="right|center_vertical"
        android:lines="1"
        android:textSize="@dimen/sp_14"
        android:background="@null"
        android:textColor="@color/color_999999"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/vNecessaryTitleInputviewline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/line"/>
</androidx.constraintlayout.widget.ConstraintLayout>