<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFloorsSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_marginBottom="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:orientation="horizontal">
        <EditText
            android:layout_marginLeft="@dimen/dp_16"
            android:id="@+id/etFloorsMinValue"
            android:layout_width="@dimen/dp_70"
            android:background="@drawable/search_floors_bg"
            android:hint="@string/min_value"
            android:textSize="@dimen/sp_14"
            android:inputType="number"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:layout_height="@dimen/dp_30"/>

        <TextView
            android:id="@+id/tvFloorsDao"
            android:text="@string/dao"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>
        <EditText
            android:id="@+id/etFloorsMaxValue"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:inputType="number"
            android:layout_width="@dimen/dp_70"
            android:background="@drawable/search_floors_bg"
            android:hint="@string/max_value"
            android:textColor="@color/color_333333"
            android:layout_height="@dimen/dp_30"/>
        <TextView
            android:text="@string/floor"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="right"
                android:id="@+id/tvFloorsSure"
                android:text="@string/floor_btn"
                android:gravity="center"
                android:enabled="false"
                android:background="@drawable/search_floors_sure"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_30"/>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>