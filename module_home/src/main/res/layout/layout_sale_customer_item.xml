<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSaleCustomerLetter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_333333"
        android:text="刘"
        android:gravity="center"
        android:background="@drawable/common_line_cycle_bg"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"/>

   <TextView
       android:id="@+id/tvSaleCustomerName"
       app:layout_constraintLeft_toRightOf="@id/tvSaleCustomerLetter"
       android:textColor="@color/color_333333"
       android:textSize="@dimen/sp_16"
       android:text="刘姐"
       android:layout_marginLeft="@dimen/dp_12"
       android:layout_marginTop="@dimen/dp_15"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvSaleCustomerIsTop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvSaleCustomerName"
        android:text="@string/setTop"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingTop="@dimen/dp_1"
        android:paddingBottom="@dimen/dp_1"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_width="@dimen/dp_30"
        android:background="@drawable/common_red_radius_bg"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvSaleCustomerTao"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvSaleCustomerIsTop"
        android:text="@string/tao"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingTop="@dimen/dp_1"
        android:paddingBottom="@dimen/dp_1"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_width="@dimen/dp_30"
        android:gravity="center"
        android:background="@drawable/tao_radius_bg"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSaleCustomerArea"
        app:layout_constraintTop_toBottomOf="@id/tvSaleCustomerName"
        app:layout_constraintLeft_toRightOf="@id/tvSaleCustomerLetter"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:text="电梯中高体"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSaleCustomerRoad"
        app:layout_constraintTop_toBottomOf="@id/tvSaleCustomerArea"
        app:layout_constraintLeft_toRightOf="@id/tvSaleCustomerLetter"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:text="电梯中高体"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvSaleCustomerTime"
        app:layout_constraintTop_toBottomOf="@id/tvSaleCustomerRoad"
        app:layout_constraintLeft_toRightOf="@id/tvSaleCustomerLetter"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_15"
        android:text="电梯中高体"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@id/tvSaleCustomerLetter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line"/>
</androidx.constraintlayout.widget.ConstraintLayout>