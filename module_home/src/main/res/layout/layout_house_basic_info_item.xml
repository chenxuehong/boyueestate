<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15"
    android:layout_height="wrap_content"
    tools:viewBindingIgnore="true">>

    <TextView
        android:id="@+id/tvHouseDetailTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="金祁新城"
        android:textSize="@dimen/sp_16"
        android:gravity="center_vertical"
        android:textColor="@color/color_333333"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="@dimen/dp_40"/>

    <TextView
        android:id="@+id/tvHouseDetailPrice"
        app:layout_constraintTop_toBottomOf="@id/tvHouseDetailTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16"
        android:text="410万"
        android:textColor="@color/common_red"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvHouseDetailArgePrice"
        android:layout_marginLeft="@dimen/dp_6"
        app:layout_constraintTop_toBottomOf="@id/tvHouseDetailTitle"
        app:layout_constraintLeft_toRightOf="@id/tvHouseDetailPrice"
        app:layout_constraintBottom_toBottomOf="@id/tvHouseDetailPrice"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="55元/m2"
        android:textColor="@color/color_999999"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvHouseDetailFloorage"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tvHouseDetailArgePrice"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="面积: "
        android:textColor="@color/color_999999"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvHouseDetailFloorageValue"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tvHouseDetailArgePrice"
        app:layout_constraintLeft_toRightOf="@id/tvHouseDetailFloorage"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="72m2"
        android:textColor="@color/common_red"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tvHouseDetailHShape"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tvHouseDetailArgePrice"
        app:layout_constraintLeft_toRightOf="@id/tvHouseDetailFloorageValue"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="户型: "
        android:layout_marginLeft="@dimen/dp_24"
        android:textColor="@color/color_999999"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvHouseDetailHShapeValue"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tvHouseDetailArgePrice"
        app:layout_constraintLeft_toRightOf="@id/tvHouseDetailHShape"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:text="2室1厅1卫"
        android:textColor="@color/common_red"
        android:layout_height="wrap_content"/>
    <co.lujun.androidtagview.TagContainerLayout
        android:id="@+id/houseDetailTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/transparent"
        app:container_enable_drag="false"
        app:horizontal_interval="5dp"
        app:vertical_interval="5dp"
        app:tag_horizontal_padding="8dp"
        app:tag_vertical_padding="2dp"
        app:tag_clickable="false"
        app:tag_max_length="4"
        app:tag_text_size="@dimen/sp_14"
        app:tag_theme="random"
        app:tag_corner_radius="@dimen/dp_6"
        app:container_border_color="@color/transparent"
        app:container_background_color="@color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHouseDetailFloorage" />

    <TextView
        android:layout_marginTop="@dimen/dp_16"
        android:id="@+id/tvHouseDetailTel"
        app:layout_constraintTop_toBottomOf="@id/houseDetailTags"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvHouseDetailFollow"
        android:layout_width="0dp"
        android:text="电话"
        android:drawablePadding="@dimen/dp_6"
        android:drawableTop="@drawable/owner_tel"
        android:textColor="@color/white"
        android:background="@drawable/call_bg"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvHouseDetailFollow"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_16"
        android:drawablePadding="@dimen/dp_6"
        android:drawableTop="@drawable/owner_follow"
        app:layout_constraintTop_toBottomOf="@id/houseDetailTags"
        app:layout_constraintLeft_toRightOf="@id/tvHouseDetailTel"
        app:layout_constraintRight_toLeftOf="@id/tvHouseDetailTakeLook"
        android:layout_width="0dp"
        android:text="写跟进"
        android:textColor="@color/white"
        android:background="@drawable/call_bg"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvHouseDetailTakeLook"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/houseDetailTags"
        app:layout_constraintLeft_toRightOf="@id/tvHouseDetailFollow"
        app:layout_constraintRight_toLeftOf="@id/tvHouseDetailLog"
        android:layout_width="0dp"
        android:drawablePadding="@dimen/dp_6"
        android:drawableTop="@drawable/owner_takelook"
        android:text="带看"
        android:textColor="@color/white"
        android:background="@drawable/call_bg"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvHouseDetailLog"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_16"
        app:layout_constraintTop_toBottomOf="@id/houseDetailTags"
        app:layout_constraintLeft_toRightOf="@id/tvHouseDetailTakeLook"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:drawablePadding="@dimen/dp_6"
        android:drawableTop="@drawable/owner_log"
        android:text="日志"
        android:textColor="@color/white"
        android:background="@drawable/call_bg"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:paddingTop="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_12"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>