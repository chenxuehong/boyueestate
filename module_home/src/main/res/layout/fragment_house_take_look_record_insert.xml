<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.kotlin.base.widgets.HeaderBar
        style="@style/MatchWrap"
        android:background="@color/main_color"
        app:isShowBack="true"
        app:titleText="@string/take_look" />

    <com.kotlin.base.widgets.NecessaryTitleSelectView
        android:id="@+id/nsvTakeLookInsert_house"
        style="@style/MatchWrap"
        app:leftTitleText="@string/takelook_house"
        app:isNecessary="true"
        app:isShowLine="true"
        app:tipContentText="@string/takelook_house_input"
        android:layout_height="@dimen/dp_40"/>
    <TextView
        android:id="@+id/tvTakeLookEvaluation"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_15"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:text="@string/customer_evaluation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"/>

    <EditText
        android:id="@+id/EtTakeLookInsertEvaluation"
        android:background="@drawable/common_line_radius_bg"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_width="match_parent"
        android:gravity="top|left"
        android:textSize="@dimen/sp_14"
        android:padding="@dimen/dp_10"
        android:hint="@string/customer_evaluation_input"
        android:layout_height="@dimen/dp_100"/>


    <TextView
        android:id="@+id/tvTakeLookInsert"
        android:text="@string/new_insert"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/common_maincolor_radius_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"/>
</LinearLayout>