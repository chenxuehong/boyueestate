<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPhoneTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:textColor="@color/color_333333"
        android:gravity="center"
        android:text="@string/more_new_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"/>
    <EditText
        android:id="@+id/etPhoneContent"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:hint="@string/input_phone_tip"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:padding="@dimen/dp_6"
        android:inputType="phone"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:background="@drawable/common_white_radius_bg"
        android:layout_height="@dimen/dp_30"/>
    <View
        android:id="@+id/PhoneHLine"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@id/etPhoneContent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_height="@dimen/dp_0_5"/>
    <TextView
        android:id="@+id/tvPhoneCancel"
        app:layout_constraintTop_toBottomOf="@id/PhoneHLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/PhoneVLine"
        android:layout_width="0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/cancel"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/main_color"
        android:layout_height="@dimen/dp_40"/>
    <View
        android:id="@+id/PhoneVLine"
        app:layout_constraintTop_toBottomOf="@id/PhoneHLine"
        app:layout_constraintLeft_toRightOf="@id/tvPhoneCancel"
        app:layout_constraintRight_toLeftOf="@id/tvPhoneInsert"
        android:layout_width="@dimen/dp_0_5"
        android:background="@color/line"
        android:layout_height="@dimen/dp_40"/>

    <TextView
        android:id="@+id/tvPhoneInsert"
        app:layout_constraintTop_toBottomOf="@id/PhoneHLine"
        app:layout_constraintLeft_toRightOf="@id/PhoneVLine"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/main_color"
        android:text="@string/new_insert"
        android:layout_height="@dimen/dp_40"/>
</androidx.constraintlayout.widget.ConstraintLayout>