<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/EditInputView_fl_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/layout_edit_inputview_et_text"
        android:hint="请输入账号"
        android:paddingLeft="@dimen/dp_20"
        android:background="@null"
        android:textSize="@dimen/sp_18"
        android:layout_marginRight="@dimen/dp_80"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/layout_edit_inputview_iv_clear"
        android:layout_marginRight="@dimen/dp_80"
        android:src="@drawable/clear_pw"
        android:layout_gravity="center_vertical|right"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"/>

    <ImageView
        android:id="@+id/layout_edit_inputview_iv_see"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@drawable/see"
        android:layout_gravity="center_vertical|right"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"/>
</FrameLayout>