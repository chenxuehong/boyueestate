<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/common_white_radius_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvCancel"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/common_red"
        android:layout_marginRight="15dp"
        android:text="@string/cancel"
        android:background="@drawable/common_cancel_bg"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvTitle"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_30"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvCancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTakeLook"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="left"
        app:layout_constraintRight_toLeftOf="@id/tvAccompany"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAccompany"
        android:layout_marginTop="@dimen/dp_18"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvTakeLook"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_width="0dp"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_13"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTakeLookSign"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTakeLook"
        android:layout_width="0dp"
        android:background="@drawable/common_sign_bg"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center"
        android:text="@string/sign"
        app:layout_constraintRight_toLeftOf="@id/tvAccompanySign"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:layout_height="@dimen/dp_40"/>

    <TextView
        android:id="@+id/tvAccompanySign"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/common_sign_bg"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tvTakeLookSign"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_15"
        android:gravity="center"
        android:text="@string/sign"
        app:layout_constraintTop_toBottomOf="@id/tvTakeLook"
        android:layout_width="0dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_13"
        android:layout_height="@dimen/dp_40"/>
</androidx.constraintlayout.widget.ConstraintLayout>